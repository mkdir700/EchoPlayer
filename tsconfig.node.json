{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/renderer/src/**/*", "src/types/**/*", "src/test/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@types_/*": [
        "src/types/*"
      ],
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
